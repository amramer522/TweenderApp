<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    >

        <ImageView
            android:id="@+id/Reset_Password_Fragment_Iv_Logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d150"
            android:layout_marginStart="@dimen/d24"
            android:layout_marginTop="@dimen/d40"
            android:layout_marginEnd="@dimen/d24"
            android:layout_above="@id/Reset_Password_Fragment_Til_Pin_Code"

            android:src="@drawable/ic_logo"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/Reset_Password_Fragment_Til_Pin_Code"
            style="@style/textinputlayoutTheme"
            android:gravity="center_vertical"
            >

            <android.support.design.widget.TextInputEditText

                style="@style/textedittextTheme"
                android:drawableStart="@drawable/ic_code"
                android:hint="@string/enter_verfication_code"
                android:inputType="number"
                />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/Reset_Password_Fragment_Btn_Change"
            style="@style/buttonTheme"
            android:text="@string/verfiy"
            android:layout_below="@id/Reset_Password_Fragment_Til_Pin_Code"
            />





</RelativeLayout>